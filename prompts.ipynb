import matplotlib.pyplot as plt
import seaborn as sns

# --- Visualizing differences across Prompt Categories ---

# Calculate mean statistics for prompt categories
prompt_category_means = prompt_comparison_data.groupby('prompt_category')[['total_word_count', 'cognitive_word_count', 'emotional_word_count']].mean().reset_index()

plt.figure(figsize=(15, 5))

plt.subplot(1, 3, 1)
sns.barplot(x='prompt_category', y='total_word_count', data=prompt_category_means, hue='prompt_category', palette='viridis', legend=False)
plt.title('Mean Total Word Count by Prompt Category')
plt.xlabel('Prompt Category')
plt.ylabel('Mean Total Word Count')

plt.subplot(1, 3, 2)
sns.barplot(x='prompt_category', y='cognitive_word_count', data=prompt_category_means, hue='prompt_category', palette='viridis', legend=False)
plt.title('Mean Cognitive Word Count by Prompt Category')
plt.xlabel('Prompt Category')
plt.ylabel('Mean Cognitive Word Count')

plt.subplot(1, 3, 3)
sns.barplot(x='prompt_category', y='emotional_word_count', data=prompt_category_means, hue='prompt_category', palette='viridis', legend=False)
plt.title('Mean Emotional Word Count by Prompt Category')
plt.xlabel('Prompt Category')
plt.ylabel('Mean Emotional Word Count')

plt.tight_layout()
plt.show()

